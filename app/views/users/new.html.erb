<%= render 'shared/errors' %>

<%= form_for @user, url: {action: "create"}, html: {class: "new_user_form"} do |f| %>
<h2>Sign Up</h2>
  <%= f.label :name, :class => 'form_label' %>
  <%= f.text_field :name, :placeholder => "What is your name?" %>
  <br>
  <%= f.label :password, :class => 'form_label' %>
  <%= f.password_field :password %>
  <br>
  <div class="button_new">
    <%= f.submit "Create", :class => 'main' %>
  </div>
<% end %>
